pipeline {
  agent  any
tools {
        maven 'Maven 3.9.9' // Name of the Maven installation in Jenkins Global Tool Configuration
    }
environment {
        SONARQUBE = 'SonarQube_Server' // Name of SonarQube instance in Jenkins configuration
    }
  stages {
  stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }
        stage('Build') {
            steps {
                sh 'mvn clean package'
            }
        }
    stage('Scan') {
      steps {
        withSonarQubeEnv(installationName: 'SONARQUBE') { 
          sh 'mvn sonar:sonar'
         // sh './mvnw clean org.sonarsource.scanner.maven:sonar-maven-plugin:3.9.0.2155:sonar'
        }
      }
    }
  }
}
}
